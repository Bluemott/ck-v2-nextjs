# WordPress REST API Configuration
NEXT_PUBLIC_WORDPRESS_REST_URL=https://api.cowboykimono.com
NEXT_PUBLIC_WORDPRESS_ADMIN_URL=https://admin.cowboykimono.com

# Site Configuration
NEXT_PUBLIC_APP_URL=https://cowboykimono.com
NEXT_PUBLIC_SITE_URL=https://cowboykimono.com
NODE_ENV=development

# AWS Configuration (for Lambda functions)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Redis Configuration (for enhanced caching)
REDIS_URL=redis://localhost:6379
# Alternative Redis configurations:
# REDIS_URL=redis://username:password@localhost:6379
# REDIS_URL=redis://your-redis-instance.amazonaws.com:6379
# REDIS_URL=rediss://your-redis-instance.amazonaws.com:6380 (SSL)

# Cache Configuration
CACHE_TTL=300000
MAX_RECOMMENDATIONS=5

# Monitoring Configuration
ENABLE_MONITORING=true
CLOUDWATCH_LOG_GROUP=/aws/lambda/WordPressRecommendations 