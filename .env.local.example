# Development Environment Configuration
# Copy this file to .env.local and configure as needed

# Redis Configuration
# For WordPress Lightsail Redis (same server): redis://127.0.0.1:6379
# For external Redis with auth: redis://username:password@hostname:6379
# REDIS_URL=redis://127.0.0.1:6379

# Webhook Secret (for WordPress webhook authentication)
# WEBHOOK_SECRET=your-webhook-secret-key

# WordPress API Configuration
WORDPRESS_API_URL=https://api.cowboykimono.com/wp-json/wp/v2
WORDPRESS_ADMIN_URL=https://admin.cowboykimono.com

# AWS Configuration (for production)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=2000

# Monitoring (Optional)
# ENABLE_MONITORING=true
# CLOUDWATCH_NAMESPACE=CowboyKimono