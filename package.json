{
  "name": "ck-v2-nextjs",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:workspaces": "npm run build --workspace=infrastructure && npm run build --workspace=lambda/graphql || echo 'Workspace builds completed with warnings'",
    "test:build": "node scripts/test-build.js",
    "check:workspaces": "node scripts/check-workspaces.js",
    "cleanup:windows": "node scripts/cleanup-windows.js",
    "check:lambda": "node scripts/check-lambda-setup.js",
    "deploy:infrastructure": "cd infrastructure && cdk deploy",
    "deploy:lambda": "cd lambda/graphql && npm run package",
    "test:aws-graphql": "curl -X POST $NEXT_PUBLIC_AWS_GRAPHQL_URL -H 'Content-Type: application/json' -d '{\"query\": \"{ __typename }\"}'",
    "setup:infrastructure": "node scripts/setup-infrastructure.js",
    "setup:check": "node scripts/setup-infrastructure.js --check-only"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.857.0",
    "@aws-sdk/client-secrets-manager": "^3.857.0",
    "@tailwindcss/typography": "^0.5.16",
    "graphql": "^16.8.1",
    "next": "15.3.4",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "19.1.9",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "workspaces": [
    "infrastructure",
    "lambda/graphql"
  ]
}
